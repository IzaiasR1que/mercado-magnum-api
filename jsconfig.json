{
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "Node",
      "alwaysStrict": true,
      "target": "ES2022",
      "baseUrl": ".",
      "paths": {
        "modules/*": ["./src/modules/*"],
        "shared/*": ["./src/shared/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }